<% @books.each do |book| %>
	<tbody>
		<tr>
			<td><%= link_to user_path(book) do %>
					<%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg", size:'40x40' %>
				<% end %></td>
			<td><%= link_to book_path(book.id) do %>
					<%= book.title %>
				<% end %></td>
			<td><%= book.body %></td>
			<!-- いいねへのrender -->
			<!-- イイねボタンここから -->
		<% if book.favorited_by?(current_user) %>
			<!-- favorited_by?自分が含まれている場合 -->
			<td>
				<%= link_to book_favorites_path(book, redirect_id: 0),method: :delete, remote: true do %>
					<i class="fa fa-heart" aria-hidden="true" style="color: red;"></i><% end %>
				<%= book.favorites.count %>いいね
			</td>
			<!-- favorited_by?自分が含まれていない場合 -->
			<% else %>
			<td>
				<%= link_to book_favorites_path(book, redirect_id: 0),method: :post,remote: true do %>
					<i class="fa fa-heart-o" aria-hidden="true"></i>
				<% end %>
				<%= book.favorites.count %>いいね
			</td>
		<% end %>
			<!-- コメントここから -->
			<td><%= link_to "コメント数:#{book.book_comments.count}",book_path(book.id) %></td>
		</tr>
	</tbody>
<% end %>