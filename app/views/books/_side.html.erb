
<!-- これはサイドバー -->
<%= form_for(@book)do |f| %>

<!-- 空白で投稿された場合エラーメッセージを表示させる -->
<% if @book.errors.any? %>
<div class="alert alert-danger">

  <h2><%= @book.errors.count %> errors prohibited this obj from being saved:</h2>
  <% @book.errors.full_messages.each do |message| %>
  <%= message %>
  <% end %>
</div>
<% end %>
<% end %>
<!-- エラーメッセージここまで -->

<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <!-- ログインしていたらサイドバーを表示させる -->
      <% if user_signed_in? %>
      <!-- ここからプロフィール -->
    <h2>User info</h2>
      <!-- ユーザのプロフィール画像 -->
    <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, class: "pull-left profile-thumb", fallback: "no_image.jpg" %>
    <table class="table table-condensed">
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>

      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
    </table>
      <!-- クラス：ボタン、レンチのアイコン -->
    <%= link_to "",edit_user_path(@user.id), class: "btn btn-default  btn-block glyphicon glyphicon-wrench" %>


      <!-- ここまでプロフィール -->

      <!-- 新規投稿画面ここから -->
    <h2>New book</h2>
      <!-- form_for部分 -->
      <%= form_for(@book, url: books_path) do |f| %>

      <div class="field row">
        <label>Title</label>
        <%= f.text_field :title, class:"col-xs-12 book_title" %>
        <br>
      </div>

      <div class="actions row">
        <label for="body">Option</label>
        <%= f.text_area :body, class:"col-xs-12 book_body" %>
        <br>
      </div>

      <input type="submit" name="commit" value="Create Book" class="btn btn-primary col-xs-12" data-disable-with="Create Book">
      <% end %>

      <% end %>
    </div>
    <!-- 新規投稿画面ここまで -->
<!-- サイドバーここまで -->