<!-- これはbookの編集画面 -->




<div class="form-body">
  <!-- ここにform_forを追加します -->
  <%= form_for(@book)do |f| %>

  <!-- エラーメッセージを表示させる -->
<% if @book.errors.any? %>
  <!-- <div class="alert alert-warning"> -->
    <h2><%= @book.errors.count %>errors prohibited this obj from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <!-- </div> -->
<% end %>
<!-- エラーメッセージここまで -->

  <!-- attachment_image_tagにより画像を埋め込む。ユーザのプロフィール画像 -->
  <div clas="img-kawauso">
    <%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
  </div>
  <!-- titleフォーム -->
  <div class="form-group has-icon">
    <string>Title</string>
    <label class="control-label sr-only" for="title">Title</label>
    <%= f.text_field :title, autofocus: true, class:"form-control", id:"title",pracholder:"タイトル" %>
    <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
    <div class="form-group has-icon">
      <div class="user-edit-image">
      </div>
      <div>
        <!-- bodyフォーム -->
        <string>body</string>
        <label class="control-label sr-only" for="body">body</label>
        <%= f.text_area :body, autofocus: true, class:"form-control", id:"body",pracholder:"body"%>
      </div>
      <%= f.submit "変更を保存", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
    </div>
    <% end %>


  <%= link_to"show",book_path(@book.id) %>
  |
  <a class="back" href="/books">Back
  </a>

  </div>