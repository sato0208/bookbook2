<!-- これは投稿一覧画面 -->
<!DOCTYPE html>
<html>
<head>
<meta name="viewport" content="width=device-width,initial-scale=1.0,minimum-scale=1.0">
<title>book_index</title>
</head>

<body>
<%= render 'books/side', books: @books %>
	<div class="container">
	<div class="row">
	<div class="col-xs-9">
		<!-- book投稿一覧 -->
		<h2>Books</h2>
		<table class="table table-hover">
			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Option</th>
					<th colspan="3"></th>
				</tr>
			</thead>
			<!-- books変数内から一つずつ取り出しbook変数へ -->
			<% @books.each do |book| %>
			<!-- bookとひもついているユーザーの画像データを表示させる -->
			<tbody>
				<tr>
					<td><%= link_to user_path(book) do %>
							<%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg", size:'40x40' %>
						<% end %></td>
					<!-- タイトルにリンク付けする -->
					<td><%= link_to book_path(book.id) do %>
							<%= book.title %>
						<% end %></td>
					<!-- bodyを表示 -->
					<td><%= book.body %></td>
				</tr>
			<% end %>
			</tbody>
		</table>
		<!-- book投稿一覧ここまで -->
	</div>
	</div>
	</div>
</body>
</html>