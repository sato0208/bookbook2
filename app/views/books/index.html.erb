<!DOCTYPE html>
<html>
<head>
	<meta name="viewport" content="width=device-width,initial-scale=1.0,minimum-scale=1.0">
	<title>BOOKS</title>
</head>
<body>
	<h1>Books</h1>
	<table>
		<tr>
			<th>Title</th>
			<th>Body</th>
			<th colspan="3"></th>
		</tr>
		<tbody>
			<% @books.each do |book| %>
			<td><%= book.title %></td>

			<td><%= book.body %></td>

			<td><a><%=link_to "Show", "/books/#{book.id}" %></td></a>
			<td><a><%=link_to "Edit", "/books/#{book.id}/edit" %></td></a>
			<td><a><%= link_to 'Destroy',"/books/#{book.id}", method: :delete, data: { confirm: 'Are you sure?' } %></td></a>
		</tbody>
		<% end %>
	</table>

	<footer>
<!-- エラーメッセージ -->
<ul>
  <% @book.errors.full_messages.each do |msg| %>
   <li>
    <%= msg %>
   </li>
  <% end %>
</ul>


<!-- 新規投稿画面 -->
		<h2>New book</h2>
		<!-- form_for部分 -->

		<%= form_for(@book, url: '/books') do |f| %>

			<label>Title</label>
			<%= f.text_field :title %>
			<label>Body</label>
			<%= f.text_area :body %>

			<%= f.submit 'Create Book' %>


		<% end %>

	</footer>

</body>
</html>