<!-- これはbookの詳細画面 -->



<!DOCTYPE html>
<html>
<head>
	<% if flash.now[:notice] %>
	<p><% flash[:notice] %></p>
	<% end %>
</head>
<%= render 'books/side', books: @books %>
<div class="col-xs-9">
	<body>
		<h2>Book detail</h2>
		<table class="table">
			<tbody>
				<!-- bookとひもづくユーザーの画像データを表示させる。book.user -->
				<tr>

					<th><%= link_to user_path(@user) do %>
						<%= attachment_image_tag @books.user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg", size:'40x40' %></th>

						<!-- ユーザーネームが表示されない -->
						<td><%= @user.name %><% end %></td>
						<!-- （ブックタイトル） -->
						<td><%= @books.title %></td>
						<!-- （ブックボディ） -->
						<td><%= @books.body %></td>
						<!-- ログインしているユーザーの場合edit,destoryを表示させる -->
						<% if @books.user == current_user %>

						<td>
							<%= link_to "Edit",edit_book_path(@books.id), class:"btn btn-success"%></td>
							<td>
								<%= link_to "Destroy", book_path(@books.id),class:"btn btn-danger", method: :delete, data: {confirm: '本当に削除しますか？'} %></td>
								<% end %>
							</tr>
						</tbody>
					</table>
				</body>
				</html>