<!-- わからなすぎてmeshiteroをコピーしました。 -->
<!-- これはユーザー編集画面です -->



<div class="body-wrap">
  <div id="st-container" class="st-container">
    <div class="st-pusher">
      <div class="st-content">
        <div class="st-content-inner">
          <section class="slice slice-lg sct-color-1">
            <div class="container">
              <div class="row">
                <div class="col-md-4 col-md-offset-4">
                  <div class="form-user style-1 rounded has-shadow-1">
                    <div class="form-header text-center">
                      <h2 class="form-header-title">User info</h2>
                    </div>


                    <!-- エラーメッセージ2〜20文字の間、空白はダメ-->
                    <% if @user.errors.any? %>
                    <div id="error_explanation">
                      <h2><%= @user.errors.count %>errors prohibited this obj from being saved:</h2>
                      <ul>
                        <% @user.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                        <% end %>
                      </ul>
                    </div>
                    <% end %>
                    <!-- エラーメッセージここまで -->


                    <div class="form-body">
                      <!-- ここにform_forを追加します -->
                      <%= form_for(@user)do |f| %>
                      <!-- 名前フォーム -->
                      <div class="form-group has-icon">
                        <string>name</string>
                        <label class="control-label sr-only" for="name">Name</label>
                        <%= f.text_field :name, autofocus: true, class:"form-control", id:"name",pracholder:"名前", maxlength:20 %>


                        <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
                        <div class="form-group has-icon">

                          <!-- attachment_fieldにより画像選択用のボタンを表示させる -->
                          <%= f.attachment_field :profile_image, placeholder:"プロフィール画像", class:"user-edit-form" %>
                        </div>

                        <div class="form-group has-icon">
                          <label class="control-label sr-only" for="introduction">introduction</label>
                          <string>introduction</string>
                          <%= f.text_area :introduction, autofocus: true, class:"form-control", id:"introduction",pracholder:"自己紹介文" %>
                        </div>
                        <%= f.submit "変更を保存", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
                      </div>
                      <% end %>
                    </div>





                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>
      </div>
    </div>
  </div>
</div>
</div>