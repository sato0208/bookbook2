<!-- これは投稿一覧画面 -->



<!DOCTYPE html>
<html>
<head>
	<meta name="viewport" content="width=device-width,initial-scale=1.0,minimum-scale=1.0">
	<title>Users</title>
</head>
<body>

	<!-- book投稿一覧 -->
	<h1>Users</h1>
	<table class="table table-condensed">
		<tbody>
			<tr>
				<th>image</th>
				<th>name</th>
				<th></th>
			</tr>
			<!-- books変数内から一つずつ取り出しbook変数へ -->
			<% @users.each do |user| %>
			<!-- bookとひもついているユーザーの画像データを表示させる -->
			<tr><td><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg" %></td>

				<!-- タイトルにリンク付けする -->
				<td><%= user.name %></td>
				<!-- bodyを表示 -->
				<td><%= link_to "show", user_path(user) %>
				</td>
			</tr>
			<% end %>
		</table>
	</td>
</tbody>
</table>
<!-- book投稿一覧ここまで -->



<footer>


</footer>
</body>
</html>